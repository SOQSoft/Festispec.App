                    <TextBox HorizontalAlignment="Left" Height="115" Margin="10.597,102,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="1160"/>
                    <TextBlock HorizontalAlignment="Left" Height="30" Margin="10.597,267,0,0" TextWrapping="Wrap" Text="Vraag inhoud:" VerticalAlignment="Top" Width="240" FontSize="20"/>
                    <ComboBox HorizontalAlignment="Left" Height="30" Margin="10,302,0,0" VerticalAlignment="Top" Width="200"/>

                </Grid>
            </TabItem>
        </TabControl>
        <Button Content="Voeg vraag toe" Margin="10,597.5,1455,10" Click="addQuestion"/>

    </Grid>
</Page>
